<style scoped>
  main {
    padding: 2rem;
    min-height: 100svh;
  }
  h1,
  h2,
  h3,
  nav {
    font-family: "Jua", sans-serif;
  }

	h1 {
		display: inline-block;
		font-size: 2rem;
	}

  img {
    width: auto;
    max-width: 100%;
    height: auto;
  }

  .blogLayout {
    display: grid;
